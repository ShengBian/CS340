<html>
<h1>Update {{person.firstName}} {{person.lastName}} :</h1>
<form id="update-person" action="/people" method="post">
    Number: <input type="number" name="number" value="{{person.number}}"><br><br>
    Last name: <input type="text" name="lastName" value="{{person.lastName}}"><br><br>
    First name: <input type="text" name="firstName" value="{{person.firstName}}"><br><br>
    Phone Number: <input type="text" name="phoneNumber" value="{{person.phoneNumber}}"><br><br>
    Email: <input type="text" name="email" value="{{person.email}}"><br><br>
    Birth Date: <input type="date" name="birthdate" value="{{person.birthdate}}"><br><br>
</form>
<button onclick="updatePerson({{person.number}})">Update</button>
</html>
